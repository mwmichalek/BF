
@using Syncfusion.EJ2.Blazor
@using Syncfusion.EJ2.Blazor.Navigations

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">BeerFactory V9000</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="stage/1" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> HLT
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="stage/3">
                <span class="oi oi-plus" aria-hidden="true"></span> MT
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="stage/5">
                <span class="oi oi-list-rich" aria-hidden="true"></span> BK
            </NavLink>
        </li>
    </ul>
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
